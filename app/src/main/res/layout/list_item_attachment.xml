<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/attachmentTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/mediumGap"
            android:layout_marginRight="@dimen/mediumGap"
            style="@style/TaskRowTitle"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_remove"
            android:layout_margin="@dimen/mediumGap" />

    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/mediumGap"
        android:layout_marginRight="@dimen/mediumGap"
        android:background="@color/black_10_alpha" />

</LinearLayout>